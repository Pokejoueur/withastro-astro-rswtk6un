        <circle cx="12" cy="12" r="10"></circle>
        <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"></path>
        <line x1="12" y1="17" x2="12.01" y2="17"></line>
      </svg>
    </div>
  </div>
  
  <a href="/" class="bg-primary-600 hover:bg-primary-700 text-white py-2 px-6 rounded-md transition-colors inline-flex items-center">
